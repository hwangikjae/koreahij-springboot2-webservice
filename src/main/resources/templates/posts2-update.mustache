{{>layout/header}}
<h1>게시글 수정</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id">글번호</label>
                <input type="text" class="form-contol" id="id" value="{{post2.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-contol" id="title2" value="{{post2.title2}}">
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-contol" id="author2" value="{{post2.author2}}" readonly>
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-contol" id="content2">{{post2.content2}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update2">수정완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete2">삭제</button>
    </div>
</div>
{{>layout/footer}}